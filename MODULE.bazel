    patches = [
        "@com_github_buildbarn_bb_storage//:patches/org_uber_go_mock/mocks-for-funcs.diff",
        "@com_github_buildbarn_bb_remote_execution//:patches/org_uber_go_mock/generics.diff",
    ],
    path = "go.uber.org/mock",
)

